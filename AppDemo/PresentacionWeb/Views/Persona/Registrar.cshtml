<!-- Modal -->
<div class="modal fade" id="modal-registrar" role="dialog">
    <div class="modal-dialog-persona">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Registro de persona</h4>
            </div>
            <div class="modal-body">
                <form id="seccion-datos-persona" class="well">
                    <h5 class="subtitulos">Datos de la persona</h5>
                    <div class="form-horizontal col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-id">Código:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-id">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-nombre">Nombre:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-nombre" name="Nombre" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-apellido">Apellido:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-apellido" name="Apellido" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-usuario">Usuario:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-usuario" name="usuario" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4" for="txt-contrasena">Contraseña:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="txt-contrasena" name="Contrasena" required>
                            </div>
                        </div>
                    <button id="btn-registrar" type="submit" class="btn btn-default col-md-12" form="seccion-datos-persona">
                        Registrar persona
                    </button>
                        </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>
